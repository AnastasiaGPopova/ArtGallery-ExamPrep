
        <main>
            <section id="details-page">
                <h1>Details</h1>
                <article class="details-card">

                    <article class="details-card-text">
                        <h2>Title:<br> {{currentPublication.title}}</h2>
                        <h3>Author: {{currentPublication.author.username}}</h3>
                        <h3>Painting technique: {{currentPublication.technique}}</h3>
                        <h3>Certificate of authenticity: {{currentPublication.certificate}}</h3>

                        <!-- If there is no registered user, do not display buttons-->
                        <div class="buttons">
                            {{#if isOwner}}
                            <!-- Only for registered user and author of the publication -->
                            <a href="/{{currentPublication._id}}/edit" class="btn-edit">Edit</a>
                            <a href="/{{currentPublication._id}}/delete" class="btn-delete">Delete</a>
                            {{else}}

                            {{#if isSharedAlready}}
                            <p class="shared-pub">You already shared this publication</p>
                            {{else}}
                            {{#if isLogged}}
                            <!-- logged in user who has not yet shared the publication-->
                            <a href="/{{currentPublication._id}}/share" class="btn-share">Share publication</a>
                            {{/if}}
                            <!-- logged in user who has already shared the publication-->
                            {{/if}}
                            {{/if}}
                            
                        </div>

                    </article>

                    <article class="details-card-image">
                        <img src="/img/img-5.jpg" alt="art-image2">
                    </article>

                </article>
            </section>
        </main>
